@inject SignInManager<AptUser> SignInManager
@inject UserManager<AptUser> UserManager
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="nav-header">
    <div class="top-bar">
        <nav class="navbar navbar-expand">
            <div class="container">
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="bottom-menu-bar">
        <nav class="navbar navbar-light navbar-expand-md">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">

                <img src="~/images/logo.jpg" class="img-fluid" style="min-width: 100px; height: auto;" />
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-nav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbar-nav">

                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="manageraccount" asp-action="index">HOME <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="manageraccount" asp-action="showapplicationusers">APPLICATIONS</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="manageraccount" asp-action="showmaintenancerequestsusers">MAINTENANCE REQUESTS</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Manage">ACCOUNT SETTINGS</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>

<div class="container-fluid">
    <div class="row justify-content-center py-5">
        <div class="col-md-6">
            @RenderBody()
        </div>
    </div>
</div>

<br />

@RenderSection("Scripts", required: false)