@using Microsoft.AspNetCore.Identity
@inject SignInManager<AptUser> SignInManager
@inject UserManager<AptUser> UserManager
@model List<AptUser>

@{
    ViewData["Title"] = "Maintenance Request Users";
}

<partial name="_LoggedInAsPartial" />
<br />
<h1>Residents with Maintenance Requests</h1>
<hr />

<div class="container">

    @{
        if (Model.Count() > 0)
        {
            @for (int i = 0; i < Model.Count; i++)
            {
                if (i > 0)
                {
                    <hr />
                }

                <div style="display:flex">
                    <div class="flex flex-row" style="display: inline-block;padding: 10px;">@Model[i].FirstName @Model[i].LastName</div>

                    <div style="display: inline-block; margin-left: 50px;"><a asp-controller="manager" asp-action="showmaintenancerequests" asp-route-firstname="@Model[i].FirstName" asp-route-lastname="@Model[i].LastName" asp-route-aptuserid="@Model[i].Id" class="fp-applylink" style="margin-left: 40px;">View</a></div>
                </div>

            }

        }
        else
        {
            <h4>There are no residents with maintenance requests at this time.</h4>
        }
    }
</div>